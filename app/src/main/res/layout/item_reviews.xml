<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/game_image"
        android:layout_width="364dp"
        android:layout_height="200dp"
        android:padding="8dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/i_3"
        android:contentDescription="TODO" />

    <TextView
        android:id="@+id/game_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Game Name"
        android:textSize="24sp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp" />

    <TextView
        android:id="@+id/game_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Game Description"
        android:paddingBottom="16dp" />

    <Button
        android:id="@+id/recommend_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do You Recommend It"
        android:padding="8dp"
        android:background="?android:attr/selectableItemBackground"
        android:layout_gravity="start" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="6dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/game_general_score_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Score"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/game_general_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="90"
                android:textAlignment="center"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="6dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/user_score_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User Score"
                android:textAlignment="center"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/user_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="80"
                android:textAlignment="center"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Adjustments for displaying Review data -->
            <TextView
                android:id="@+id/review_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/review_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Review Description"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="6dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/status_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Status"
                android:textAlignment="center"
                android:textSize="12sp" />

            <Button
                android:id="@+id/status_button"
                android:layout_width="60dp"
                android:layout_height="48dp"
                android:fontFamily="sans-serif"
                android:text="status"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="8sp" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
